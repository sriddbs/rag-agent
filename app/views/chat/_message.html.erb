<div class="<%= message.role == 'user' ? 'flex justify-end' : 'flex justify-start' %>">
  <div class="<%= message.role == 'user' ? 'bg-blue-600 text-white' : 'bg-white text-gray-900 border border-gray-200' %> rounded-2xl px-4 py-3 max-w-2xl shadow-sm">
    <div class="text-sm whitespace-pre-wrap"><%= simple_format(h(message.content)) %></div>
    <div class="text-xs opacity-70 mt-2"><%= message.created_at.strftime('%I:%M %p') %></div>
  </div>
</div>
